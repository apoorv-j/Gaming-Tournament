<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:background="#F8F8F8"
    android:layout_margin="20dp"
    >

    <TextView
        android:text="ENTER DETAILS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Headline6"
        android:background="#1976d2"
        android:padding="8dp"
        android:textColor="@color/white"
        android:elevation="5dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/paytmNo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter Paytm Number"
        android:textSize="25sp"
        android:inputType="phone" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/paytmNo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter Paytm Number Again"
        android:textSize="25sp"
        android:inputType="phone" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/amount_redeem_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Amount"
        android:textSize="25sp"
        android:inputType="number" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Amount will be credited in your Paytm Wallet within 8 working hours."
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"
        android:textColor="@color/black"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <TextView
            android:id="@+id/cancel_redeem_dialog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#939292"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="4dp"
            android:text="CANCEL"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:layout_weight="0.5"
            />

        <TextView
            android:id="@+id/redeem_btn_dialog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#008300"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="4dp"
            android:text="REDEEM"
            android:textColor="@color/white"
            android:layout_weight="0.5"/>
    </LinearLayout>
</LinearLayout>