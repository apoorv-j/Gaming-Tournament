<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/tp_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apoorv Jain"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tp_pos"
        app:layout_constraintEnd_toStartOf="@+id/tp_winnings"
        app:layout_constraintStart_toEndOf="@+id/tp_pos"
        app:layout_constraintTop_toTopOf="@+id/tp_pos" />


    <TextView
        android:id="@+id/tp_winnings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="$100"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tp_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tp_name" />
</androidx.constraintlayout.widget.ConstraintLayout>