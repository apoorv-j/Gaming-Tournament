<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tr_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="6dp">

<androidx.constraintlayout.widget.ConstraintLayout
    style="@style/boldBlackLetter"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/tr_tran_type"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="CREDIT"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="#2e7d32"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/tr_textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/tr_tran_type"
        app:layout_constraintStart_toEndOf="@+id/tr_tran_type"
        app:layout_constraintTop_toTopOf="@+id/tr_tran_type" >

        <TextView
            android:id="@+id/tr_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purchased"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tr_dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date and Time"
            android:textColor="@color/black"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/tr_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="+ â‚¹100"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tr_tran_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tr_tran_type" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>