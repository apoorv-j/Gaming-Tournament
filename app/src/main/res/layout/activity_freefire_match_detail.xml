<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".activity.FreefireMatchDetailActivity">

    <ScrollView
        android:id="@+id/fd_scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fd_joinMatchDetails">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            >

            <TextView
                android:id="@+id/fd_textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_white"
                android:elevation="4dp"
                android:text="Version:"
                android:textColor="#424242"
                app:layout_constraintStart_toEndOf="@+id/fd_textView19"
                app:layout_constraintTop_toTopOf="@+id/fd_textView19" />

            <TextView
                android:id="@+id/fd_textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_white"
                android:elevation="4dp"
                android:text="Map:"
                android:textColor="#424242"
                app:layout_constraintStart_toEndOf="@+id/fd_textView20"
                app:layout_constraintTop_toTopOf="@+id/fd_textView19" />

            <TextView
                android:id="@+id/fd_textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_white"
                android:elevation="4dp"
                android:text="Match Type:"
                android:textColor="#424242"
                app:layout_constraintStart_toStartOf="@+id/fd_textView19"
                app:layout_constraintTop_toBottomOf="@+id/fd_textView19" />

            <TextView
                android:id="@+id/fd_textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_white"
                android:elevation="4dp"
                android:text="Entry Fee:"
                android:textColor="#424242"
                app:layout_constraintStart_toEndOf="@+id/fd_textView22"
                app:layout_constraintTop_toBottomOf="@+id/fd_textView19" />

            <TextView
                android:id="@+id/fd_textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_white"
                android:elevation="4dp"
                android:text="Match Shedule:"
                android:textColor="#424242"
                app:layout_constraintStart_toStartOf="@+id/fd_textView19"
                app:layout_constraintTop_toBottomOf="@+id/fd_textView22" />

            <TextView
                android:id="@+id/fd_textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_white"
                android:elevation="4dp"
                android:text="Winning prize :"
                android:textColor="#424242"
                app:layout_constraintStart_toStartOf="@+id/fd_textView24"
                app:layout_constraintTop_toBottomOf="@+id/fd_textView24" />

            <TextView
                android:id="@+id/fd_textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_white"
                android:elevation="4dp"
                android:text="Per Kill :"
                android:textColor="#424242"
                app:layout_constraintStart_toEndOf="@+id/fd_textView26"
                app:layout_constraintTop_toTopOf="@+id/fd_textView26" />

            <ImageView
                android:id="@+id/fd_image"
                android:layout_width="0dp"
                android:layout_height="225dp"
                android:scaleType="fitXY"
                android:src="@drawable/freefire_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fd_textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Title"
                android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Headline6"
                android:textColor="#12AC9C"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fd_image" />

            <TextView
                android:id="@+id/fd_textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Prize Details"
                android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Headline6"
                android:textColor="#12AC9C"
                app:layout_constraintStart_toStartOf="@+id/fd_textView18"
                app:layout_constraintTop_toBottomOf="@+id/fd_textView23" />

            <TextView
                android:id="@+id/freefire_disclaimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/bg_white"
                android:elevation="6dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Room ID and Password will be shown on this page,15 minutes before the Match Starts."
                app:layout_constraintStart_toStartOf="@id/fd_textView26"
                app:layout_constraintTop_toBottomOf="@+id/fd_textView26" />
            <TextView
                android:id="@+id/fd_textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="About this Match"
                android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Headline6"
                android:textColor="#12AC9C"
                app:layout_constraintStart_toStartOf="@+id/freefire_disclaimer"
                app:layout_constraintTop_toBottomOf="@+id/freefire_disclaimer" />

            <TextView
                android:id="@+id/fd_textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_white"
                android:elevation="4dp"
                android:text="Type: "
                android:textColor="#424242"
                app:layout_constraintStart_toStartOf="@+id/fd_textView18"
                app:layout_constraintTop_toBottomOf="@+id/fd_textView18" />

            <TextView
                android:id="@+id/fd_textView29"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="#424242"
                android:text="@string/freefireRules"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/fd_textView28"
                app:layout_constraintTop_toBottomOf="@+id/fd_textView28" />

            <TextView
                android:id="@+id/fd_participants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Participants List"
                android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Headline6"
                android:textColor="#12AC9C"
                app:layout_constraintStart_toStartOf="@+id/fd_textView29"
                app:layout_constraintTop_toBottomOf="@+id/fd_textView29" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_refresh"
                android:text="  Refresh"
                android:drawableLeft="@drawable/ic_refresh"
                android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Headline6"
                android:textColor="#12AC9C"
                android:clickable="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="17dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fd_textView29"
                android:onClick="refreshParticipants"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fd_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/fd_participants"
                app:layout_constraintTop_toBottomOf="@+id/fd_participants"
                >

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <TextView
        android:id="@+id/fd_joinMatchDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JOIN"
        android:textAlignment="center"
        android:background="#008300"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_marginTop="2dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>