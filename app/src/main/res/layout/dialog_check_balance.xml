<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:background="#F8F8F8"
    android:layout_margin="20dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        android:text="JOINING MATCH"
        android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Headline6"
        android:background="#1976d2"
        android:padding="8dp"
        android:textColor="@color/white"
        android:elevation="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="Your Current Balance: "
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/currBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="Match Entry Fee:"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/matchFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/message_check_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="You have enough balance to join this match."
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:textColor="#008300"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"

        >

        <TextView
            android:id="@+id/cancel_check_balance"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#939292"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="4dp"
            android:text="CANCEL"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/next_check_balance"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#1976d2"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="4dp"
            android:text="NEXT"
            android:textColor="@color/white"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>