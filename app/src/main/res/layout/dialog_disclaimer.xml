<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingBottom="10dp"
    android:background="#F8F8F8"
    android:layout_margin="20dp"
    >

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:id="@+id/disclamer_title"
        android:text="MATCH #"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Headline6"
        android:textColor="#4297DF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="You have successfully registered for this Match."
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffab40"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="Check the match details 15 minutes before the match to get Room Id and Password."
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/disclaimer_home_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#283593"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="4dp"
            android:text="HOME"
            android:textColor="@color/white"
            android:layout_weight="0.5"/>
    </LinearLayout>
</LinearLayout>